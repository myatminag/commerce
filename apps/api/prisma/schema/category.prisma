model Category {
  id              String     @id @default(cuid())
  name            String     @db.VarChar(255)
  slug            String     @unique @db.VarChar(255)
  description     String?
  banner_image    Json?
  thumbnail_image Json?
  parent_id       String?
  parent          Category?  @relation("parent_category", fields: [parent_id], references: [id], onDelete: Cascade)
  children        Category[] @relation("parent_category")
  created_at      DateTime   @default(now())
  updated_at      DateTime   @updatedAt
  product         Product[]

  @@index([name])
  @@map("category")
}
