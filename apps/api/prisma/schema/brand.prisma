model Brand {
  id             String    @id @default(cuid())
  name           String    @db.VarChar(255)
  slug           String    @unique @db.VarChar(255)
  bannerImage    Json
  thumbnailImage Json
  description    String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  product        Product[]

  @@index([name])
  @@map("brand")
}
