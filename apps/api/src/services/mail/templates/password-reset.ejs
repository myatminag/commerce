<html lang="en">
  <%- include("./shared/header.ejs") %>
  <body>
    <table
      role="presentation"
      cellspacing="0"
      cellpadding="0"
      border="0"
      width="100%"
      style="max-width: 600px; margin: 0 auto"
    >
      <tr>
        <td align="center">
          <table
            role="presentation"
            cellspacing="0"
            cellpadding="0"
            border="0"
            width="100%"
          >
            <tr>
              <td align="right" style="background-color: #ffffff; width: 37%">
                <a href="https://imgbb.com/"
                  ><img
                    src="https://i.ibb.co/kgBvfcn1/logo.png"
                    alt="logo"
                    style="width: 42px"
                /></a>
              </td>
              <td
                align="left"
                style="
                  padding: 0px 0 0px 10px;
                  background-color: #ffffff;
                  width: 63%;
                "
              >
                <p style="color: #01322d; font-size: 22px; font-weight: 600">
                  ATX ecommerce
                </p>
              </td>
            </tr>
          </table>
        </td>
      </tr>
      <tr>
        <td align="center" style="background-color: #f4f8fe">
          <table
            role="presentation"
            cellspacing="0"
            cellpadding="0"
            border="0"
            width="100%"
            style="padding: 24px"
          >
            <tr>
              <td
                align="left"
                style="
                  background-color: #ffffff;
                  border-top-left-radius: 20px;
                  border-top-right-radius: 20px;
                "
              >
                <a href="https://ibb.co/4ZxM4Wqg"
                  ><img
                    src="https://i.ibb.co/0j3ZYq7V/Ecommerce-Admin-Site-Capture.png"
                    alt="Ecommerce-Admin-Site-Capture"
                    border="0"
                    style="
                      width: 100%;
                      border-top-left-radius: 20px;
                      border-top-right-radius: 20px;
                    "
                /></a>
              </td>
            </tr>
            <tr>
              <td
                align="left"
                style="background-color: #ffffff; padding: 0px 24px 0px 24px"
              >
                <p style="font-size: 22px; font-weight: 700; margin-top: 20px">
                  Password Reset
                </p>
                <p style="font-size: 20px; font-weight: 400; margin-top: 20px">
                  Hi <%= locals.name %>,
                </p>
                <p
                  style="
                    margin-top: 24px;
                    text-align: justify;
                    color: #7e7979;
                    line-height: 26px;
                  "
                >
                  We received a request to reset your ATX eCommerce account
                  password associated with <%= locals.email %>. If you made this
                  request, click on the link below to set a new password.
                </p>
              </td>
            </tr>
            <tr>
              <td align="center" style="background-color: #ffffff">
                <a
                  href="<%= locals.link %>"
                  target="_blank"
                  style="
                    line-height: 100%;
                    text-decoration: none;
                    display: block;
                    max-width: 100%;
                    background-color: #048972;
                    border-radius: 8px;
                    color: #ffffff;
                    font-size: 15px;
                    text-align: center;
                    width: 210px;
                    padding: 14px 0px;
                  "
                >
                  <span
                    style="
                      max-width: 100%;
                      display: inline-block;
                      line-height: 120%;
                    "
                  >
                    Set a new password
                  </span>
                </a>
              </td>
            </tr>
            <tr>
              <td
                align="left"
                style="
                  background-color: #ffffff;
                  padding: 0px 24px 0px 24px;
                  border-bottom-left-radius: 20px;
                  border-bottom-right-radius: 20px;
                "
              >
                <p
                  style="
                    margin-top: 24px;
                    text-align: justify;
                    color: #7e7979;
                    line-height: 26px;
                    padding-bottom: 48px;
                  "
                >
                  If you did not request a password reset, you can safely ignore
                  this email. Your password will not be changed.
                </p>
              </td>
            </tr>
          </table>
        </td>
      </tr>
      <tr>
        <td><%- include("./shared/footer.ejs") %></td>
      </tr>
    </table>
  </body>
</html>
